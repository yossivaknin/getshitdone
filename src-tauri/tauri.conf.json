{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Get Shit Done",
  "version": "0.1.0",
  "identifier": "com.getshitdone.app",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "TAURI_BUILD=true npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Get Shit Done",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "notifications": {
      "all": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    }
  }
}
